<Window x:Class="TextToSpeech.langselection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextToSpeech"
        mc:Ignorable="d"
        Title="RU\ENG" Height="120" Width="220" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF827F5D"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button Click="ru" HorizontalAlignment="Center" Content="Русский язык" Margin="0,30,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Click="eng" HorizontalAlignment="Center" Content="English" Margin="0,55,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Window>
